/* Sidebar bên trái, rộng 30 ký tự, cao 100%, có viền phải */
#sidebar {
  width: 30;
  height: 100%;
  dock: left;
  border-right: vkey $panel;
  background: $surface;
}

/* Nội dung bên phải chiếm hết chỗ còn lại */
#main-content {
  height: 100%;
  padding: 2;
}

/* Label tiêu đề menu */
#sidebar Label {
  padding: 1;
  text-align: center;
  background: $primary;
  color: $text;
  width: 100%;
}

/* Nút bấm trong menu */
#sidebar Button {
  width: 100%;
  border: none;
  margin-top: 1;
}

/* Từng hộp Stat */
Static {
  width: 20;
  height: 3;
  background: $surface;
  border: none;
  margin: 1;
  content-align: center middle;
}

Dashboard > Horizontal {
  height: auto;
  margin-bottom: 1;
  align: center middle;
}

DataTable {
  width: 100%;
  height: 1fr;
}
